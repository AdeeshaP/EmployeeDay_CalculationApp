@model EmployeeWebApp.Models.Employee
@{
    ViewBag.Title = "DeleteEmployee";
}
<div>
    @using (Html.BeginForm("DeleteConfirmed", "Employees", FormMethod.Post))
    {
        @Html.HiddenFor(e => e.EmpId)
        <h2><b>Delete Employee</b></h2>
        <hr />
        <h4>Are you sure you want to delete this?</h4>
        <br />

        <dl class="dl-horizontal">
            <dt class="control-label">
                @Html.DisplayNameFor(model => model.EmployeeName)
            </dt>

            <dd class="label-data">
                @Html.DisplayFor(model => model.EmployeeName)
            </dd>

            <dt class="control-label">
                @Html.DisplayNameFor(model => model.EmployeeEmail)
            </dt>

            <dd class="label-data">
                @Html.DisplayFor(model => model.EmployeeEmail)
            </dd>

            <dt class="control-label">
                @Html.DisplayNameFor(model => model.EmployeeJob)
            </dt>

            <dd class="label-data">
                @Html.DisplayFor(model => model.EmployeeJob)
            </dd>
        </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> | @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>