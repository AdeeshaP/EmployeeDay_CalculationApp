@model EmployeeWebApp.Models.DayCalculation

@{
    ViewBag.Title = "CountWorkingDays";
}

<h2><b>Count Working Days</b></h2>
<hr />

@using (Html.BeginForm("CountWorkingDays", "Calculation", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(model => model.StartingDate, new { @class = "control-label col-md-2" })
        <div class="add-data col-md-10">
            @Html.TextBoxFor(m => m.StartingDate, new { @class = "form-control", type = "date", name = 'x', value = "@Request.Form['x']" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-2" })
        <div class="add-data col-md-10">
            @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", type = "date", name = "y", value = "@Request['y']" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Calculate" class="btn btn-success" />
        </div>
    </div>

    <div class="form-group">
        <h3 style="padding-left:2em">The number of working days : @TempData["Data"]</h3>
    </div>
</div>

 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}